/* pages/my/my.wxss */
.my {
  width: 100%;
  color: #333;
}
.my_info {
  text-align: center;
  padding: 80rpx 0;
  background: #5596e5;
}
.my_info image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}
.my_name {
  color: #fff;
  margin-top: 20rpx;
}
.my_list {
  font-size: 14px;
  border-top: 15rpx solid #e6e6e6;
  position: relative;
}
.my_list_item {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #dbdbdb;
  background: url(https://www.hyexw.com/image/head-back-right.png) no-repeat center right;
  background-size: 80rpx;
}
.my_list_item text,
.my_list_item navigator {
  margin-left: 30rpx;
}
.my_list_item_none {
  border-bottom: none;
}
.displayNone {
  opacity: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
}
/* pages/my/my.wxss */
.my {
  width: 100%;
  color: #333;
}
.my_info {
  text-align: center;
  padding: 80rpx 0;
  background: #5596e5;
}
.my_info image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 200rpx;
}
.my_name {
  color: #fff;
  margin-top: 20rpx;
}
.my_list {
  font-size: 14px;
  border-top: 15rpx solid #e6e6e6;
  position: relative;
}
.my_list_item {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #dbdbdb;
  padding-left:40px;
}
.share {
  background: url(https://www.hyexw.com/image/icon_share.png) no-repeat center left 10px;
  background-size: 56rpx;
}
.xieyi {
  background: url(https://www.hyexw.com/image/icon_xieyi.png) no-repeat center  left 10px;
  background-size: 56rpx;
}
.kefu {
  background: url(https://www.hyexw.com/image/icon_kefu.png) no-repeat center left 10px;
  background-size: 56rpx;
}
.mony {
  background: url(https://www.hyexw.com/image/icon_mony.png) no-repeat center left 10px;
  background-size: 56rpx;
}
.my_list_item_none {
  border-bottom: none;
}
.displayNone {
  opacity: 0;
  position: absolute;
  bottom: 0;
  width: 100%;
}